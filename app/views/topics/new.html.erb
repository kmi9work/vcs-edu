<h1>New topic</h1>

<% form_for(@topic) do |f| %>
  <%= f.error_messages %>

	<p>
    <%= f.label "Тема" %><br />
    <%= f.text_field :theme %>
  </p>
  <p>
    <%= f.label "Сообщение" %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', topics_path %>